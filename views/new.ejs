<head>
    <!-- BootStrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>



<body>
    <div class="container">
        <div class="modal-header d-flex justify-content-center">
            <h3 class="modal-title">Add a new student</h3>
        </div>
        <div class="modal-body text-center">
            <form method="POST" action="/concession">
                <div class="form-group">
                    <input type="text" class="text-center form-control" name="studentName" placeholder="Name" aria-describedby="emailHelp" required>
                </div>
                <div class="form-group">
                    <input type="number" class="text-center form-control" name="balance" placeholder="Balance" required> 
                </div>
                <div class="form-group">
                <input type="text" name="picture" placeholder="Picture" class="text-center form-control">
                </div>

                <button type="submit" class="btn btn-outline-info btn-lg w-50">Add</button>
            </form>
        </div>
    </div>

</body>

