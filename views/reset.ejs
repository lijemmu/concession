<head>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.15.0/css/mdb.min.css" rel="stylesheet">

    <link rel="stylesheet" href="main.css">


    <!-- Error messages -->
    <div class="container errorClass">
        <% if(error && error.length > 0 ) { %>
        <div class="alert alert-danger text-center" role="alert">
            <%= error %>
        </div>
        <% } %>
        <% if(success && success.length > 0 ) { %>
        <div class="alert alert-success text-center">
            <%= success %>
        </div>

        <% } %>
    </div>
</head>
<!-- nav bar -->
<nav class="navbar navbar-expand-lg navbar-dark ">
    <a class="navbar-brand" href="/home" style="margin-left: 43%">
        <i class="fab fa-cuttlefish fa-3x text-primary" style="border-color: white
      ;"></i>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class=" h3 navbar-nav mr-auto">
            <li class="nav-item  about">
                <a class="nav-link" id="about" href="/about">About</a>
            </li>
        </ul>


    </div>
</nav>


<div class="container">
    <div class="card-body">
        <form action="/reset/<%= token %>" method="post">
            <div class="form-group md-form">
                <label for="exampleInputPassword1">New Password</label>
                <input type="password" name="password" class="form-control val" id="regPassword1" required>
            </div>
            <div class="form-group md-form">
                <label for="exampleInputPassword1"> Confirm New Password</label>
                <input type="password" name="confirm" class="form-control val" id="confPassword1" required
                    oninvalid="this.setCustomValidity('Make sure passwords match')"
                    oninput="this.setCustomValidity('')">
            </div>
            <button class="btn btn-primary flipbtn">Submit</button>
        </form>
    </div>
</div>


<!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js">
</script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js">
</script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.15.0/js/mdb.min.js">
</script>
