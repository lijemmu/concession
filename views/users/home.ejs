<%- include ('../partials/header.ejs') %>

<div class="container">
    <div class="row mb-5" style="margin-left: 130px;">
        <a href="/new" id="addStudent" class="mr-4 mt-5">
            <i class="fas fa-plus fa-9x text-info"></i>
        </a>
        <form action="/search" method="GET" class="form-inline d-none d-lg-block" style="margin-top: 95px;">
            <input type="text" name="searchedName" class="form-control mr-3 py-3 text-center" style="width: 500px;"  placeholder="Search" aria-label="Search" >
            <button class="btn btn-outline-info btn-lg" type="submit">Search</button>
        </form>
    </div>
</div>

<!-- The users cards -->
<div class="container">
    <div class="row">
        <% users.forEach(function(user){ %>
        <div class="col-lg-4 mb-3">
            <div class="card" style="width: 18rem;">
                <a href="/<%= user._id %>">
                    <img src="<%= user.picture %>" alt="" class="card-img-top">
                </a>
                <div class="card-body text-center">
                    <a href="/<%= user._id %>/edit" class="edit">
                        <h5 class="card-title"><%= user.name%></h5>
                    </a>
                    <a onclick="showInput('<%= user._id %>', '<%= user.finalBalance %>')">
                        <h6 id="<%= user._id %>" class="card-subtitle mb-2 text-muted">$<%= user.finalBalance%></h6>
                    </a>
                    <form action="/receipt/<%= user._id %>" method="post">
                        <input id="<%= user._id %>Input" name="receipt[action]"  type="number" class="w-50 d-none">
                        <input type="hidden" name="receipt[date]">
                        <input type="hidden" name="receipt[balance]">
                    </form>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<div class="modal fade" id="addStudentModal" tabindex="-1" role="dialog" aria-labelledby="modalAdd" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

<div class="modal fade" id="editStudentModal" tabindex="-1" role="dialog" aria-labelledby="modalAdd" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>



