<%- include ('../partials/header.ejs') %>

<div class="row">
    <div class="d-flex justify-content-center">
        <div class="card w-25 mt-5 ml-5 border-0 text-center">
            <img src="<%= user.picture %>" class="img-fluid">
            <h2 class=" mt-3"><%= user.name %></h2>
            <h5 class=" text-muted">$<%= user.finalBalance %></h5>
        </div>
    </div>
    <!-- TODO: Add a search bar to search through the receipts -->
    <table class="table table-striped table-dark container text-center mt-3">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Action</th>
                <th scope="col">Balance</th>
            </tr>
        </thead>
        <tbody>
            <!-- TODO: Modify the action to display the right sign(+/-) -->
            <% user.receipt.forEach(function(e){ %>
            <tr>
                <th> <%= e.date %> </th>
                <th> + <%= e.action %> </th>
                <th> $ <%= e.balance %> </th>
            </tr>
            <% }) %>
        </tbody>

    </table>
</div>

<%- include ('../partials/footer.ejs') %>