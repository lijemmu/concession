<%- include ('../partials/header.ejs') %>

<% rowsTotal = user.receipt.length %>

<body onload="pageTab('<%= rowsTotal %>')">
    <div class="row">
        <div class="d-flex justify-content-center">
            <div class="card w-25 mt-5 ml-5 border-0 text-center">
                <img src="<%= user.picture %>" onerror="this.src='https://source.unsplash.com/1600x900/?dogs'"
                    class="img-fluid" width="1920" height="1200">
                <h2 class=" mt-3"><%= user.name %></h2>
                <h5 class="text-muted">$<%= user.finalBalance %></h5>
            </div>
        </div>

        <form action="/<%= user._id %>/search" method="GET" class="container mb-1">
            <input type="search" name="searchedDate" class="form-control text-center"style="width: 430px; margin-left: -16px; margin-bottom: 0 !important;" placeholder="Search by date">
        </form>

    

        <table class="table table-striped table-dark container text-center table-bordered" id="table">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Action</th>
                    <th scope="col">Balance</th>
                </tr>
            </thead>
            <div id="showRows">
                <tbody>
                    <% if(user.receipt.flag){ %>
                    <% user.receipt.searchedDate.forEach(function(e){ %>
                    <tr>
                        <th> <%= e.date %> </th>
                        <th> <%= e.actionSign %> $<%= e.action %> </th>
                        <th> $ <%= e.balance %> </th>
                    </tr>
                    <% }) %>
                    <% } else{ %>
                    <% user.receipt.forEach(function(e){ %>
                    <tr>
                        <th> <%= e.date %> </th>
                        <th> <%= e.actionSign %> $<%= e.action %> </th>
                        <th> $ <%= e.balance %> </th>
                    </tr>
                    <% }) %>
                    <% } %>

                </tbody>
            </div>
        </table>
    </div>

    <div class="container">
        <nav>
            <ul class="pagination justify-content-center" id="pages"></ul>
        </nav>
    </div>
</body>



<%- include ('../partials/footer.ejs') %>