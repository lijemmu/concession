<%- include ('../partials/header.ejs') %>

<div class="row">
    <div class="d-flex justify-content-center">
            <div class="card w-25 mt-5 ml-5 border-0 text-center">
                    <img src="<%= user.picture %>" class="img-fluid">
                    <h2 class=" mt-3"><%= user.name %></h2>
                    <h5 class=" text-muted">$<%= user.balance %></h5>
                </div>
    </div>
    <table class="table table-striped table-dark container mt-3">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date</th>
                    <th scope="col">Action</th>
                    <th scope="col">Balance</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <!-- forEach count -->
                    <th></th>
                    <!-- Date -->
                    <th></th>
                    <!-- Action -->
                    <th>+ <%= user.balance %> </th>
                    <!-- Balance -->
                    <th> $500 </th>
                </tr>
            </tbody>

        </table>
</div>

<%- include ('../partials/footer.ejs') %>

