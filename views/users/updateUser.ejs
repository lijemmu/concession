<body>
    <div class="container">
        <div class="card-header text-center">
            <h5>Update School Information</h5>
        </div>
        <!-- Update EmailAdress Supervisor name and phone number-->
        <form method="post" action="/<%= currentUser._id %>?_method=PUT">
            <div class="card-body" id="tabOne">
                <div class="form-group md-form">
                    <label for="exampleInputEmail1">Email Address</label>
                    <input type="email" name="email" class="form-control val " aria-describedby="emailHelp"
                        value="<%= currentUser.email %>" required>
                </div>
                <div class="form-row">
                    <div class="form-group md-form col-md-6">
                        <label for="inputEmail4">Supervisor Full Name</label>
                        <input type="text" class="form-control" name="supervisorName"
                            value="<%= currentUser.info.supervisorName %>" placeholder="Full Name" required>
                    </div>
                    <div class="form-group md-form col-md-6">
                        <label for="inputPassword4">Supervisor Phone Number</label>
                        <input type="tel" name="supervisorPhone" class="form-control" min="10" max="10"
                            value="<%= currentUser.info.supervisorPhone %>" placeholder="+1" required>
                    </div>
                </div>
                <p class="font-small blue-text d-flex justify-content-end">
                    <a type="button" role="tab" class="text-primary ml-1 changePassword">
                        Change Password?
                    </a>
                </p>
                <div class="d-flex justify-content-center mt-2 ml-2">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Update</button>
                    <button type="button" class="btn btn-outline-danger btn-lg btn-block delete">Delete User</button>
                </div>
            </div>
        </form>

        <!-- Update Password -->
            <div class="card-body d-none" id="tabTwo">
                <form action="/<%= currentUser._id %>/changePassword" method="POST">  <!-- TODO: Work on this action route-->
                        <!-- Set new password -->
                        <div class="form-group md-form">
                            <label for="exampleInputPassword1">New Password</label>
                            <input type="password" name="newPassword" class="form-control val" id="regPassword1" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                            title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                        </div>
                        <div class="form-group md-form">
                            <label for="exampleInputPassword1"> Confirm New Password</label>
                            <input type="password" name="confirm" class="form-control val" id="confPassword1" required>
                        </div>
                        <p class="font-small blue-text d-flex justify-content-end">
                            <a type="button" role="tab" class="text-primary ml-1 UpdateSchoolInfo">
                                Update School Information
                            </a>
                        </p>
                        <button type="submit" class="btn btn-primary btn-lg btn-block"> Change Password</button>
                </form>
            </div>

        <!-- Delete Your Account -->
        <form method="post" action="/<%= currentUser._id %>/delete?_method=DELETE">
            <div class="card-body d-none" id="tabThree">
                    <div class="form-group md-form md-form">
                        <p class="text-danger font-weight-bold">TO DELETE YOUR ACCOUNT TYPE " <%= currentUser.username %> " </p>
                        <input type="text" name="delete" class="form-control val " aria-describedby="emailHelp" required>
                    </div>
                    <p class="font-small blue-text d-flex justify-content-end">
                        <a type="button" role="tab" class="text-primary ml-1 UpdateSchoolInfo">
                            Update School Information
                        </a>
                    </p>
                    <div class="d-flex justify-content-center mt-2">
                        <button type="submit" class="btn btn-danger btn-lg btn-block" >Delete</button>
                    </div>
            </div>
        </form>

    </div>
</body>

<script>
    $(".changePassword").on("click", function () {
        $("#tabOne").addClass("d-none")
        $("#tabThree").addClass("d-none")
        $("#tabTwo").removeClass("d-none")
    })

    $(".UpdateSchoolInfo").on("click", function () {
        $("#tabOne").removeClass("d-none")
        $("#tabTwo").addClass("d-none")
        $("#tabThree").addClass("d-none")
    })
    $(".delete").on("click", function () {
        $("#tabOne").addClass("d-none")
        $("#tabTwo").addClass("d-none")
        $("#tabThree").removeClass("d-none")
    })
</script>


